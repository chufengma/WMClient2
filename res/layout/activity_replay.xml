<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onefengma.wmclient2.ReplayActivity" >

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="楼道"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="300dip"
        android:layout_below="@id/name"
        android:layout_marginTop="20dip"
        android:background="@color/menu_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/main"
        android:layout_above="@+id/control" />
    
    <LinearLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_above="@+id/actions" 
        android:padding="15dip" >

        <ImageView
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:src="@drawable/d4" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:src="@drawable/d3" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:src="@drawable/d2" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:src="@drawable/d1" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5"
        android:padding="15dip" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dip"
            android:layout_height="26dip"
            android:layout_weight="1"
            android:src="@drawable/image_bg" />

        <ImageView
            android:id="@+id/record_vedio"
            android:layout_width="0dip"
            android:layout_height="26dip"
            android:layout_weight="1"
            android:src="@drawable/record_vedio_bg" />

        <ImageView
            android:id="@+id/voice"
            android:layout_width="0dip"
            android:layout_height="26dip"
            android:layout_weight="1"
            android:src="@drawable/voice_bg" />

        <ImageView
            android:id="@+id/ss1"
            android:layout_width="0dip"
            android:layout_height="26dip"
            android:layout_weight="1"
            android:src="@drawable/ss1" />

        <ImageView
            android:id="@+id/ss2"
            android:layout_width="0dip"
            android:layout_height="30dip"
            android:layout_weight="1"
            android:src="@drawable/ss2" />
    </LinearLayout>

</RelativeLayout>